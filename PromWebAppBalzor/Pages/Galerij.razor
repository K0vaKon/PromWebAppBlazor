@page "/galerij"
@inject HttpClient Http

<div class="container text-center">
    <h1 class="mt-4 mb-4">Bal Foto's</h1>

    @if (photos == null)
    {
        <div class="spinner-border text-primary" role="status"></div>
    }
    else if (!photos.Any())
    {
        <p>Er zijn nog geen foto's geüpload...</p>
    }
    else
    {
        <div class="pinterest-grid">
            @foreach (var photo in photos)
            {
                <div class="pinterest-item">
                    <div class="card shadow-sm">
                        <img src="http://localhost:5036/approved/@photo"
                             class="card-img-top"
                             alt="Bal foto" />

                        @* Опционально: подпись *@
                        <div class="card-body p-2 text-center">
                            <small class="text-muted">@photo</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<string>? photos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Спрашиваем список имен файлов у API
            photos = await Http.GetFromJsonAsync<List<string>>("http://localhost:5036/api/Photo");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Fout bij laden галереи: " + ex.Message);
        }
    }
}